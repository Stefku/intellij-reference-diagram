<idea-plugin version="2">
  <id>ch.docksnet.rgraph</id>
  <name>Java Reference Diagramm</name>
  <version>1.0</version>
  <vendor email="stefan.zeller@docksnet.ch">Stefan Zeller</vendor>
  <depends>com.intellij.diagram</depends>
  <description><![CDATA[
      Java Reference Diagramm<br>
      ]]></description>

  <change-notes><![CDATA[
      ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="141.1010"/>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
	  <action class="ch.docksnet.rgraph.MyAction" id="myAction"/>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <diagram.Provider implementation="ch.docksnet.rgraph.ReferenceDiagramProvider"/>
  </extensions>
</idea-plugin>